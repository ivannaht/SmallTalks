<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body style="background-color:#063561df;">
<!-- ======= Testimonials Section ======= -->
  <section id="testimonials" class="testimonials section-bg">
    <div class="container">
      <div class="section-title">
          <h2>User's details</h2>
          <p>Here you can see the user`s info and talks</p>
      </div>
      <div class="testimonial-item">
        <h3>
            <strong><%= @user.first_name %></strong>
            <strong><%= @user.last_name %></strong>
        </h3>
        <h4>
            <strong><%= @user.nickname %></strong>
        </h4>
          <br>                
         <p>
            <i class="bx bxs-quote-alt-left quote-icon-left"></i>
            Email: <%= @user.email %> |
            Date of Birth: <%= @user.dob %> |
            Age: <%= @user.calculate_age(@user.dob) %>

            <i class="bx bxs-quote-alt-right quote-icon-right"></i>
          </p>
            <%= image_tag(@user.photo, size: '300') if @user.photo.present? %>
          <br>
          <br>
      <div class="card text-center">
        <div class="card-header">  
          <h3><strong>Talks</strong></h3>
        </div>
        <% @user.talks.each do |talk| %>  
        <div class="card-body">
          <%= image_tag(talk.photo, size: '150', :align=> "left", :style => "margin:10px;") if talk.photo.present? %>
          <h5 class="card-title" style="text-align: left;" ><%= talk.title %></h5>
          <p class="card-text" style="text-align: left;">
          <%= talk.text %>
          <p class="card-text" style="text-align: left;">
          <i><%="Theme: #{talk.theme if talk.theme.present?}" %></i>
          </p>
        <br>    
        </div>    
        <div class="card-footer text-muted">
          <div>
            score: <%= talk.cached_weighted_score %>
            comments: <%= talk.comments.count %>
          </div>
          <div>
          <p>
    <%= link_to toggle_favorite_talk_path(talk), remote: true, method: :post do %>
              <%= render 'talks/heart_button', talk: talk %>
            <% end %>        
    </p>
          </div>
          <br />
        </div>
        <% end %>
      </div>
      <br>
    </div>    
  </section> 
 <!-- End Testimonials Section -->
 <p>
 <br>
 </p>
 
</body>


