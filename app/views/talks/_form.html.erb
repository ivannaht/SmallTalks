<%= form_with(model: talk) do |form| %>
  <% if talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(talk.errors.count, "error") %> prohibited this talk from being saved:</h2>

      <ul>
        <% talk.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.text_field :photo %>
  </div>

  <div class="field">
    <%= form.label :likes_number %>
    <%= form.number_field :likes_number %>
  </div>

  <div class="field">
    <%= form.label :dislikes_number %>
    <%= form.number_field :dislikes_number %>
  </div>

  <div class="field">
    <%= form.label :comments_number %>
    <%= form.number_field :comments_number %>
  </div>

  <div class="field">
    <%= form.label :shares_number %>
    <%= form.number_field :shares_number %>
  </div>

  <div class="field">
    
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
